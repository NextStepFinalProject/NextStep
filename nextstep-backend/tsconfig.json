{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"],
            "types/*": ["src/types/*"]
        },
        "typeRoots": ["src/types", "./node_modules/@types"]
    },
    "include": ["src/**/*.ts", "index.ts", "src/*.ts", "src/**/*"],
    "exclude": ["node_modules", "dist"]
}